                        @{
                            using (Html.BeginForm("UpdateBook", "Car", FormMethod.Post))
                            {
                                @Html.Hidden("book", item.CarId);
                                <input type="submit" value="Book" />
                            }
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


